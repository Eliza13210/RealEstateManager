<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_create_act"
    android:background="@color/white"
    android:orientation="vertical">

    <!--AGENT REAL ESTATE-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/non_touch_target_dimen"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_person" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperText="*Required"
            android:hint="@string/agent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/agent_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--TYPE-->
    <include
        layout="@layout/type_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--SURFACE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/non_touch_target_dimen"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_icon_surface" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/surface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/surface_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <!--PRICE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/non_touch_target_dimen"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/round_money_black_24" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--DESCRIPTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/non_touch_target_dimen"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_notes" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/description_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--POINTS OF INTEREST-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_add_poi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/non_touch_target_dimen"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:src="@drawable/round_near_me_black_24" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/points_of_interest">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/poi_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <!--ROOMS-->
    <include
        layout="@layout/room_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/non_touch_target_dimen"
        android:text="Media"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/photo_realestate"
        android:layout_gravity="bottom"
        android:layout_marginEnd="4dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/grey"
        android:visibility="visible" />
    <!--VIDEO OR CAMERA OR GALLERY -->
    <LinearLayout
        android:id="@+id/gallery_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_top_media"
        android:layout_marginBottom="5dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ic_video"
            android:layout_width="@dimen/touch_target_dimen"
            android:layout_height="@dimen/touch_target_dimen"
            android:layout_marginEnd="@dimen/margin_create_act"
            android:background="@drawable/ic_action_video"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/ic_camera"
            android:layout_width="@dimen/touch_target_dimen"
            android:layout_height="@dimen/touch_target_dimen"
            android:layout_marginEnd="@dimen/margin_create_act"
            android:background="@drawable/ic_camera"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/ic_gallery"
            android:layout_width="@dimen/touch_target_dimen"
            android:layout_height="@dimen/touch_target_dimen"
            android:layout_marginEnd="@dimen/margin_create_act"
            android:background="@drawable/ic_pick_photo"
            android:clickable="true"
            android:focusable="true" />

        <!--PHOTOS-->
        <androidx.recyclerview.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/recyclerview_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_create_act"
            android:layout_marginEnd="@dimen/margin_create_act"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>



</LinearLayout>