<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_create_act"
        android:background="@color/white"
        android:orientation="vertical">

        <!--AGENT REAL ESTATE-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agent"
                android:textSize="@dimen/text_size_create_act"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/agent_et"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="30" />
        </LinearLayout>

        <!--TYPE-->
        <include
            layout="@layout/type_details_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--SURFACE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surface"
                    android:textSize="@dimen/text_size_create_act"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/surface_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/m2"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textAlignment="textEnd" />
            </LinearLayout>


            <!--PRICE -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textSize="@dimen/text_size_create_act"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/price_tv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/dollar"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textAlignment="textEnd" />
            </LinearLayout>
        </LinearLayout>

        <!--ROOM SPINNERS-->
        <include
            layout="@layout/room_details_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />


        <!--CAMERA OR GALLERY -->
        <LinearLayout
            android:id="@+id/gallery_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ic_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_create_act"
                android:background="@drawable/ic_camera"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/ic_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_create_act"
                android:background="@drawable/ic_pick_photo"
                android:clickable="true"
                android:focusable="true" />

            <!--PHOTOS-->
            <androidx.recyclerview.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recyclerview_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_create_act"
                android:layout_marginEnd="@dimen/margin_create_act"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <!--DESCRIPTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/description"
                android:textSize="@dimen/text_size_create_act"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description_et"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="3"
                android:hint="..."
                android:inputType="textCapSentences|textMultiLine"
                android:paddingLeft="10dp" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>